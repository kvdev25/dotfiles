#! /usr/bin/env bash

for arg in "$@"; do
  case "$arg" in
  -S)
    pacman -Slq |
      fzf --preview="pacman -Si {1}" |
      xargs -ro sudo pacman -S
    ;;
  -R)
    pacman -Qeq |
      fzf --preview="pacman -Qi {1}" |
      xargs -ro sudo pacman -Rns
    ;;
  *)
    echo "Specify '-S' to install or '-R' to remove"
    ;;
  esac
done
