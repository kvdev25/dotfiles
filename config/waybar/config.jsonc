{
  "layer": "top",
  "reload_style_on_change": false,
  "modules-left": [ "hyprland/workspaces" ],
  "modules-center": [ "clock" ],
  "modules-right": [ "network", "bluetooth", "pulseaudio", "battery" ],
  "hyprland/workspaces": {
    "format": "<sub>{icon}</sub>",
    "format-icons": {
      "default": "",
    },
    "persistent-workspaces": { "*": 10 }
  },

  "network": {
    "format": "{ifname}",
    "format-wifi": "󰤨",
    "format-ethernet": "󰀂",
    "format-disconnected": "󰤮",
    "format-disabled": "󰤭",
    "max-length": 50,
    "on-click": "uwsm app -- impala.desktop"
  },

  "bluetooth": {
    "format": "󰂯",
    "format-on": "󰂯",
    "format-connected": "󰂯",
    "format-off": "󰂲",
    "format-disabled": "󰂲",
    "on-click": "uwsm app -- bluetui.desktop"
  },

  "pulseaudio": {
    "format": "",
    "format-muted": "",
    "on-click": "open-ghostty -f wiremix"
  },

  "battery": {
    "format": "{icon}",
    "format-icons": ["󰁺","󰁻","󰁼","󰁽","󰁾","󰁿","󰂀","󰂁","󰂂","󰁹"],
    "format-charging": "{icon}󱐋",
    "on-click": "open-ghostty -fs fzf-power-profiles-menu"
  }
}
