#! /usr/bin/env bash

for arg in "$@"; do
  case "$arg" in
  -S)
    yay -Slq |
      fzf --preview="yay -Si {1}" |
      xargs -ro yay -S
    ;;
  -R)
    yay -Qeq |
      fzf --preview="yay -Qi {1}" |
      xargs -ro yay -Rns
    ;;
  *)
    echo "Specify '-S' to install or '-R' to remove"
    ;;
  esac
done
